{
  "name": "node-unit-tests",
  "version": "2.0.0",
  "description": "Seed unit test project based on 4all's Seed Project.",
  "main": "src/app.js",
  "scripts": {
    "start": "pm2 start process.yml",
    "stop": "pm2 stop process.yml",
    "restart": "pm2 restart process.yml",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "mocha --opts test/unit/mocha.opts test/unit/**/*.js",
    "test:integration": "mocha --opts test/integration/mocha.opts test/integration/**/*.js",
    "dev": "nodemon src/app.js",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint '**/*.js' --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johnnyalmeida/node-unit-tests"
  },
  "keywords": [
    "seed",
    "project",
    "4all",
    "node",
    "unit test",
    "mocha",
    "chai",
    "sinon",
    "knex"
  ],
  "author": "4All Tecnologia EPP",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "debug": "^4.1.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-winston": "^2.6.0",
    "helmet": "^3.15.0",
    "joi": "^14.3.0",
    "knex": "^0.15.2",
    "lodash": "^4.17.11",
    "moment-timezone": "^0.5.23",
    "mysql2": "^1.6.4",
    "request": "^2.88.0",
    "request-debug": "^0.2.0",
    "winston": "^2.4.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^12.0.2",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "nock": "^10.0.4",
    "supertest": "^3.3.0",
    "testdouble": "^3.9.1"
  }
}
